#name: Spec::Matchers.define ...
#group : rspec
# --
RSpec::Matchers.define :${1:method_name} do |${2:expected}|
match do |${3:actual}|$>
$0$>
end$>

failure_message_for_should do |actual|$>
"${4:should_message}"$>
end$>

failure_message_for_should_not do |actual|$>
"${5:should_not_message}"$>
end$>
end
